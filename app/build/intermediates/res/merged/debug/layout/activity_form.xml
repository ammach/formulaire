<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:background="@drawable/activity_form_background"
  android:layout_height="match_parent">
<LinearLayout     
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.formulaire.FormActivity" >
    <LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal">
        <ImageView
        android:id="@+id/profil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="@drawable/button_background"
        android:src="@drawable/ic_action_user" 
        />
        <Button 
            android:id="@+id/pickImg"
            android:onClick="pickImage"
            android:text="Choisir image"
            android:gravity="center"
            android:background="@drawable/button_background"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:layout_width="120dp"/>
    </LinearLayout>
       
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView 
            android:id="@+id/txtNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Nom:"
            />
        <EditText 
            android:id="@+id/editNom"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView 
            android:id="@+id/txtPrenom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Prenom:"
            />
        <EditText 
            android:id="@+id/editPrenom"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView 
            android:id="@+id/txtAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Age:"
            />
        <EditText 
            android:id="@+id/editAge"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView 
            android:id="@+id/txtTravail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Travail:"
            />
        <EditText 
            android:id="@+id/editTravail"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:orientation="horizontal">
        <Button 
        android:id="@+id/ajouter"
        android:onClick="ajouter"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/button_background"
        android:text="Ajouter"
        android:gravity="center"/>
         <Button 
        android:id="@+id/voirListe"
        android:onClick="voirListe"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:background="@drawable/button_background"
        android:text="Voir La Liste"
        android:gravity="center"/>
    </LinearLayout>
    
</LinearLayout>
</ScrollView>